<atlassian-plugin key="${atlassian.plugin.key}" name="${project.name}" plugins-version="2">
    <plugin-info>
        <description>${project.description}</description>
        <version>${project.version}</version>
        <vendor name="${project.organization.name}" url="${project.organization.url}" />
        <param name="plugin-icon">images/pluginIcon.png</param>
        <param name="plugin-logo">images/pluginLogo.png</param>
    </plugin-info>

    <!-- add our i18n resource -->
    <resource type="i18n" name="i18n" location="bamboo-aws-assume-role"/>

    <capabilityType class="tools.redfox.bamboo.aws.assumeRole.capability.AWSAssumeRoleCapabilityType" key="system.aws.role" name="AWS assume role" sortOrder="150">
        <description>The aws capability type</description>
        <resource location="templates/editCapability.ftl" name="edit" type="freemarker"/>
    </capabilityType>

    <web-item key="awsRoleAssumption_${buildKey}" name="awsAssumeRole" section="planConfiguration.subMenu/configuration" weight="20">
        <label key="tools.redfox.bamboo.aws.assumeRole.tab.label"/>
        <link linkId="awsRoleAssumption">/build/admin/edit/awsAssumeRole.action?buildKey=${buildKey}</link>
    </web-item>

    <xwork key="awsRoleSettings" name="AWS Role Configuration" >
        <package extends="buildAdmin" name="awsSettings" namespace="/build/admin/edit">
            <default-interceptor-ref name="buildConfigEditStack"/>
            <action class="tools.redfox.bamboo.aws.assumeRole.action.ConfigureJob" name="awsAssumeRole">
                <result name="input" type="freemarker">/templates/settings.ftl</result>
                <result name="success" type="freemarker">/templates/settings.ftl</result>
                <result name="reload" type="redirect">/build/admin/edit/awsAssumeRole.action?buildKey=${buildKey}&amp;saved=true</result>
            </action>
        </package>
    </xwork>
</atlassian-plugin>
